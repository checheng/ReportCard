<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="layout_login">
        <item name="android:background">@drawable/layout_border</item>
        <item name="android:layout_width">800px</item>
        <item name="android:layout_height">180px</item>
        <item name="android:padding">20px</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="button_login">
        <item name="android:text">登录</item>
        <item name="android:textSize">80px</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/buttonlogin_border</item>
        <item name="android:layout_width">800px</item>
        <item name="android:layout_height">180px</item>
        <item name="android:padding">20px</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="textviewofmainActivity">
        <item name="android:textSize">60px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">140px</item>
        <item name="android:layout_height">140px</item>
    </style>
    <style name="dateofrecived">
        <item name="android:textSize">70px</item>
        <item name="android:layout_width">500px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">80px</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">0px</item>
    </style>
</resources>
