<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="1000px"
        android:layout_height="600px"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/logo"
        android:gravity="center"
        android:text="\n\n\n\n\n\n\n\n1MW光伏电站监控系统\n"
        android:textColor="#003082"
        android:textSize="50px"/>
    <RelativeLayout
        style="@style/layout_login"
        android:layout_marginTop="700px"
    >
        <TextView
            android:layout_marginTop="20px"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="60px"
            android:background="@drawable/login1"
        />
        <EditText
            android:textCursorDrawable="@color/black"
            android:background="@null"
            android:paddingTop="0px"
            android:paddingBottom="0px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="200px"
            android:layout_width="500px"
            android:layout_height="100px"
            android:inputType="text"
            android:textSize="60px"
            android:hint="  用户名" android:id="@+id/the_username"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/layout_login"
        android:layout_marginTop="950px"
    >
        <TextView
            android:layout_marginTop="20px"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="60px"
            android:background="@drawable/login2"
        />
        <EditText
            android:textCursorDrawable="@color/black"
            android:background="@null"
            android:paddingTop="0px"
            android:paddingBottom="0px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="200px"
            android:layout_width="500px"
            android:layout_height="100px"
            android:inputType="textPassword"
            android:textSize="60px"
            android:hint="  密码" android:id="@+id/the_password"/>
    </RelativeLayout>
    <Button
        android:layout_marginTop="1300px"
        style="@style/button_login"
        android:onClick="login" android:id="@+id/login_button"/>
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="75px"
        android:layout_height="75px"
        android:layout_marginLeft="120px"
        android:layout_marginTop="1170px"
        android:background="@drawable/checkbox_style"
        android:button="@null"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_marginLeft="210px"
        android:layout_marginTop="1165px"
        android:gravity="center"
        android:padding="0px"
        android:text="记住密码"
        android:textColor="@color/black"
        android:textSize="60px"/>
</RelativeLayout>

