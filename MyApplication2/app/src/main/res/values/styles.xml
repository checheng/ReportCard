<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="the_EditView">
        <item name="android:layout_marginBottom">3px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">60px</item>
        <item name="android:layout_width">140px</item>
        <item name="android:textSize">40px</item>
        <item name="android:background">@color/whitesmoke</item>
        <item name="android:editable">false</item>
    </style>
    <style name="the_EditView2">
        <item name="android:layout_marginBottom">3px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">60px</item>
        <item name="android:layout_width">160px</item>
        <item name="android:textSize">40px</item>
        <item name="android:background">@color/whitesmoke</item>
        <item name="android:editable">false</item>
    </style>
    <style name="the_normalTextView">
        <item name="android:layout_marginBottom">3px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50px</item>
        <item name="android:layout_width">220px</item>
        <item name="android:layout_height">70px</item>
    </style>
    <style name="the_leftTextView">
        <item name="android:typeface">serif</item>
        <item name="android:layout_marginBottom">3px</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">37.5px</item>
        <item name="android:layout_width">60px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="the_RightTextView">
        <item name="android:typeface">serif</item>
        <item name="android:layout_marginBottom">3px</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">37.5px</item>
        <item name="android:layout_width">48px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="guzhangTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30px</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_width">240px</item>
        <item name="android:layout_height">90px</item>
        <item name="android:background">@drawable/the_right</item>
    </style>

    <style name="input_EditView">
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_width">160px</item>
        <item name="android:textSize">50px</item>
        <item name="android:background">@color/whitesmoke</item>
        <item name="android:digits">0123456789.</item>
        <item name="android:inputType">number</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>
    <style name="second_normalTextView">
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50px</item>
        <item name="android:layout_width">220px</item>
        <item name="android:layout_height">80px</item>
    </style>
    <style name="button_green">
        <item name="android:background">@drawable/the_shape3</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_width">260px</item>
        <item name="android:layout_height">140px</item>
        <item name="android:textSize">60px</item>
    </style>
    <style name="button_red">
        <item name="android:background">@drawable/the_shape3</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_width">260px</item>
        <item name="android:layout_height">140px</item>
        <item name="android:textSize">60px</item>
    </style>
    <!--spinner-->
    <style name="spinner">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">100sp</item>
        <item name="android:layout_width">220px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="element">
        <item name="android:background">@drawable/the_shape2</item>
        <item name="android:textSize">60px</item>
        <item name="android:layout_height">102px</item>
        <item name="android:layout_width">242px</item>
    </style>
    <style name="control_item_textview">
        <item name="android:layout_width">160px</item>
        <item name="android:layout_height">100px</item>
        <item name="android:textSize">40px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape</item>
    </style>
    <style name="control_item_EditText">
        <item name="android:layout_width">120px</item>
        <item name="android:layout_height">100px</item>
        <item name="android:textSize">35px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape</item>
    </style>
    <style name="the_buttonstyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">300px</item>
        <item name="android:layout_height">150px</item>
        <item name="android:textSize">50px</item>

    </style>

</resources>
