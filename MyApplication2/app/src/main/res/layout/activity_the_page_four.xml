<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_the_page_four"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="sockettest.example.com.myapplication.thePageFour">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">
    <GridView
        android:id="@+id/gridView"
        android:layout_width="900px"
        android:layout_height="710px"
        android:columnWidth="150px"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200px"
        android:numColumns="3">
    </GridView>

    <TextView
        android:id="@+id/textView"
        style="@style/control_item_textview"
        android:layout_alignLeft="@id/gridView"
        android:layout_marginTop="1045px"
        android:text="并联个数"/>
    <EditText
        android:id="@+id/in_parallel_num"
        style="@style/control_item_EditText"
        android:layout_marginTop="1045px"
        android:layout_toRightOf="@+id/textView"
        android:text="0"/>
    <TextView
        android:id="@+id/textView1"
        style="@style/control_item_textview"
        android:layout_alignLeft="@id/gridView"
        android:layout_marginTop="1150px"
        android:text="运行个数"/>
    <EditText
        android:id="@+id/run_module_num"
        style="@style/control_item_EditText"
        android:layout_marginTop="1150px"
        android:layout_toRightOf="@+id/textView" android:text="0"/>
    <TextView
        android:id="@+id/textView2"
        style="@style/control_item_textview"
        android:layout_alignLeft="@id/gridView"
        android:layout_marginTop="1255px"
        android:text="主地址位"/>
    <EditText
        android:id="@+id/master_moudel"
        style="@style/control_item_EditText"
        android:layout_marginTop="1255px"
        android:layout_toRightOf="@+id/textView" android:text="0"/>
    <TextView
        android:id="@+id/textView3"
        style="@style/control_item_textview"
        android:layout_alignLeft="@id/gridView"
        android:layout_marginTop="1360px"
        android:text="通信地址"/>
    <EditText
        android:id="@+id/rtu_addr"
        style="@style/control_item_EditText"
        android:layout_marginTop="1360px"
        android:layout_toRightOf="@+id/textView" android:text="0"/>
    <!--地址信息-->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="280px"
        style="@style/control_item_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="940px"
        android:text="IP地址"/>
    <EditText
        android:id="@+id/ip_addr"
        style="@style/control_item_EditText"
        android:layout_width="280px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1045px"/>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="280px"
        style="@style/control_item_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1150px"
        android:text="子网掩码"/>
    <EditText
        android:id="@+id/msk_addr"
        style="@style/control_item_EditText"
        android:layout_width="280px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1255px"/>
    <TextView
        android:id="@+id/textView7"
        style="@style/control_item_textview"
        android:layout_width="280px"
        android:layout_alignRight="@id/gridView"
        android:layout_marginTop="940px"
        android:text="网关地址"/>
    <EditText
        android:id="@+id/gw_addr"
        style="@style/control_item_EditText"
        android:layout_width="280px"
        android:layout_alignRight="@+id/gridView"
        android:layout_marginTop="1045px"/>
    <TextView
        android:id="@+id/textView8"
        style="@style/control_item_textview"
        android:layout_width="280px"
        android:layout_alignRight="@id/gridView"
        android:layout_marginTop="1150px"
        android:text="MAC地址"/>
    <EditText
        android:id="@+id/mac_addr"
        style="@style/control_item_EditText"
        android:layout_width="280px"
        android:layout_alignRight="@+id/gridView"
        android:layout_marginTop="1255px"/>

    <TextView
        android:text="装置\n信息"
        android:layout_alignLeft="@+id/gridView"
        android:layout_width="120px"
        style="@style/control_item_textview"
        android:layout_marginTop="940px"
        android:id="@+id/textView4"/>
    <Spinner
        android:id="@+id/Spinner"
        android:layout_marginTop="940px"
        android:background="@drawable/shape"
        android:layout_width="160px"
        style="@style/spinner"
        android:entries="@array/装置信息"
        android:layout_toRightOf="@+id/textView4"
        android:layout_marginLeft="5px"
        android:layout_height="90px"/>
    <TextView
        android:textSize="0.01sp"
        android:id="@+id/thecenter"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_width="1px"
        android:layout_height="1px"
    />
    <Button
        android:text="参数回传"
        android:layout_marginTop="1500px"
        android:layout_marginRight="50px"
        android:background="@drawable/cartoon_button"
        android:layout_toLeftOf="@+id/thecenter"
        style="@style/the_buttonstyle"
        android:id="@+id/echo"/>
        <Button
        android:text="参数修改"
        android:layout_marginTop="1500px"
        android:background="@drawable/cartoon_button"
        style="@style/the_buttonstyle"
        android:layout_marginLeft="50px"
        android:layout_toRightOf="@+id/thecenter"
        android:id="@+id/modify"/>

        <Button
        android:id="@+id/updata"
        style="@style/the_buttonstyle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1370px"
        android:layout_height="120px"
        android:background="@drawable/cartoon_button"
        android:onClick="star"
        android:text="开机"/>

        <Button
            android:id="@+id/updatatest"
            style="@style/the_buttonstyle"
            android:layout_height="120px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1370px"
            android:background="@drawable/cartoon_button"
            android:onClick="selected" android:text="测试"/>
    </RelativeLayout>
</RelativeLayout>
