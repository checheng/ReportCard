<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700px">

        <TextView
            android:id="@+id/zhujiemian"
            android:layout_width="900px"
            android:layout_height="140px"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="电能质量管理系统"
            android:textColor="@android:color/white"
            android:textSize="110px"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="invisible" android:layout_height="700px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" android:visibility="invisible">
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/content_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:digits="0123456789abcdefABCDEF"
                android:hint="输入十六进制"/>
            <Button
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/button1"
                android:onClick="onClick"
                android:text="手动"
                android:textColor="#ffffff"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" android:visibility="invisible">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
            />
            "
            <EditText
                android:id="@+id/ip1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="10.10.100.254"/>

            <EditText
                android:id="@+id/port1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:text="8899"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" android:visibility="invisible">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
            />
            <Button
                android:id="@+id/qd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/button1"
                android:onClick="onClick"
                android:text="启动循环"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/tz"

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/button1"
                android:onClick="onClick"
                android:text="停止循环"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" android:visibility="invisible">
            <Button
                android:id="@+id/bd"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="绑定"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_weight="1.2"/>
            <Button
                android:id="@+id/the_enter"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:text="进入界面"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/bbb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1" android:src="@drawable/stop" android:visibility="invisible"/>
        <TextView
            android:id="@+id/resule_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="等待服务器数据：。。。"
            android:textColor="#000000" android:textSize="18sp"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/nr"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="01 03 00 50 00 FF"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
        />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="800px"
        android:layout_height="750px"
        android:background="@drawable/the_shape2"
        android:padding="15px" android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mima"
            android:layout_marginTop="670px"
            android:text="版本:PQMoniter 1.03 beat "
            android:textColor="@color/white"
            android:textSize="30px"/>
        <TextView
            android:layout_marginRight="30px"
            android:layout_alignRight="@+id/enterto"
            android:layout_marginTop="670px"
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="版权所有"
            android:textColor="@color/white"
            android:textSize="30px"
        />
        <TextView
            android:id="@+id/zhanghao"
            android:layout_width="180px"
            android:layout_height="70px"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="120px"
            android:layout_marginTop="80px"
            android:text="用户名"
            android:textColor="@color/white"
            android:textSize="60px"/>
        <EditText
            android:id="@+id/the_username"
            android:layout_width="600px"
            android:layout_height="110px"
            android:layout_below="@+id/zhanghao"
            android:layout_centerHorizontal="true"
            android:background="@drawable/the_shape3"
            android:gravity="center"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="50px"/>
        <TextView
            android:id="@+id/mima"
            android:layout_width="180px"
            android:layout_height="70px"
            android:layout_below="@+id/the_username"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="120px"
            android:layout_marginTop="15px"
            android:text="密   码"
            android:textColor="@color/white"
            android:textSize="60px"/>
        <Button
            android:id="@+id/enterto"
            android:layout_width="240px"
            android:layout_height="110px"
            android:layout_alignRight="@+id/the_password"
            android:layout_below="@+id/the_password"
            android:layout_marginTop="50px"
            android:background="@drawable/cartoon_button"
            android:gravity="center"
            android:text="登录"
            android:textSize="60px"/>
        <TextView
            android:id="@+id/textView11"
            android:layout_width="160px"
            android:layout_height="120px"
            android:layout_below="@+id/the_password"
            android:layout_marginLeft="180px"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:text="保存密码"
            android:textColor="@color/white"
            android:textSize="40px"/>
        <CheckBox
            android:id="@+id/rememberusername"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_alignLeft="@+id/mima"
            android:layout_below="@+id/the_password"
            android:layout_marginTop="80px"
            android:background="@drawable/checkbox"
            android:button="@null"
            android:gravity="center"
            android:textSize="30px"/>
        <EditText
            android:id="@+id/the_password"
            android:layout_width="600px"
            android:layout_height="110px"
            android:layout_alignLeft="@+id/the_username"
            android:layout_alignStart="@+id/the_username"
            android:layout_below="@+id/mima"
            android:background="@drawable/the_shape3" android:gravity="center"
            android:inputType="textPassword"
            android:textSize="50px"/>


    </RelativeLayout>


</RelativeLayout>
